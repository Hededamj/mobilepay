# Server Configuration
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/mobilepay

# Redis (for Bull queue)
REDIS_URL=redis://localhost:6379

# MobilePay API Configuration
MOBILEPAY_ENV=test
MOBILEPAY_BASE_URL=https://apitest.vipps.no
MOBILEPAY_CLIENT_ID=your-client-id-here
MOBILEPAY_CLIENT_SECRET=your-client-secret-here
MOBILEPAY_SUBSCRIPTION_KEY=your-subscription-key-here
MOBILEPAY_MERCHANT_SERIAL_NUMBER=your-merchant-serial-number-here

# Merchant URLs
MERCHANT_AGREEMENT_URL=https://academy.familymind.dk/agreement-details
MERCHANT_REDIRECT_URL=https://academy.familymind.dk/payment/callback

# FamilyMind Integration
FAMILYMIND_API_URL=https://academy.familymind.dk/api
FAMILYMIND_API_KEY=shared-secret-key-here

# New Zenler Integration (Course Platform)
NEW_ZENLER_API_KEY=your-newzenler-api-key-here
NEW_ZENLER_ACCOUNT_NAME=your-subdomain-here
NEW_ZENLER_ALL_COURSES_IDS=course-id-1,course-id-2,course-id-3

# Scheduler Configuration
CHARGE_SCHEDULER_CRON=0 2 * * *
CHARGE_ADVANCE_DAYS=3

# Security
JWT_SECRET=your-jwt-secret-here
WEBHOOK_SECRET=mobilepay-webhook-secret-here

# Logging
LOG_LEVEL=info
